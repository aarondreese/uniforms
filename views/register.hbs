    <main class="mdl-layout__content">
        <div class="mdl-card mdl-shadow--6dp">
            <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
               <h2 class="mdl-card__title-text"> Register New User</h2>
            </div>
           <form method="post" action="register">
                <div class="mdl-card__supporting-text">
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <label class="mdl-textfield__label" for "EmailAddress" >Email</label>
                    <input class="mdl-textfield__input" name="EmailAddress" maxlength="100" id ="email" required  value="{{result.email}}" />
                </div>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <label class="mdl-textfield__label" for "EmailConfirm" >Confirm Email</label>
                    <input class="mdl-textfield__input" name="EmailConfirm" maxlength="100" id ="confirmEmail" required   />
                </div>
                
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <label class="mdl-textfield__label" for "MobileNumber" >Mobile Number </label>
                    <input class="mdl-textfield__input" name = "MobileNumber" maxlength ="12" id="Mobile" required /> 
                </div>
                 <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <label class="mdl-textfield__label" for "FirstName" >First Name</label>
                    <input class="mdl-textfield__input" name = "FirstName" maxlength ="100" id="firstName" required /> 
                </div>
                 <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <label class="mdl-textfield__label" for "LastName" >Last Name </label>
                    <input class="mdl-textfield__input" name = "LastName" maxlength ="100" id="LastName" required /> 
                </div>
                <div class="mdl-card__actions mdl-card--border">
                    <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored">Register</button>
                </div>
            
            </form> 
